
{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],             
    "moduleResolution": "node",                
    "resolveJsonModule": true,           
    "outDir": "./dist"                         
  },
  "include": ["./**/*"],                 
  "exclude": ["dist"]                        
}